#title {
    font-size: 48rpx;
    font-weight: 700;
}
.medal {
    display: inline-block;
    background-image: url(../../images/medal.png);
    background-position: center center;
    background-size: contain;
}
.speech-description {
    display: block;
    font-size: 32rpx;
    font-weight: 700;
}
.content-block {
    --vmargin: 30rpx;
    --hmargin: 60rpx;
    margin: var(--vmargin) var(--hmargin);
}
.content-title {
    font-weight: 700;
    font-size: 32rpx;
    margin-bottom: calc(var(--vmargin) / 2);
}
.content-text {
    font-size: 30rpx;
    margin-top: var(--vpadding);
    line-height: 125%;
}