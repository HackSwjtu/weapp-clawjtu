<scroll-view id="post-container" scroll-y="true" enable-back-to-top="true">
    <navigator wx:for="{{posts}}" wx:for-item="post" url="../speech/speech?id={{post.id}}" wx:key="null"><view class="post">
        <view class="post-info">
            <text class="post-title">{{post.title}}</text>
            <view class="post-description" wx:for="{{post.descriptions}}" wx:for-item="description" wx:key="null">
                <text>{{description}}</text>
            </view>
            <!--<view class="icon post-love {{post.loved}}"></view>-->
        </view>
        <view class="hr"></view>
        <view class="post-preview">{{post.preview}}</view>
    </view></navigator>
</scroll-view>
<view id="banner">
    <image id="avatar" src="{{userInfo.avatarUrl}}" mode="aspectFit"></image>
    <text id="nickname">{{userInfo.nickName}}</text>
    <view style="flex-grow: 1"></view>
    <image id="favorite" src="../../images/favorite.png" mode="aspectFit"></image>
</view>
<view id="tablet" class="w100p">
    <navigator class="tablet" open-type="redirectTo" url="../index/index">
        <image src="../../images/speech.png" class="icon active"></image>
    </navigator>
    <view class="tablet" bindtap="tapCompetition">
        <image src="../../images/trophy.png" class="icon"></image>
    </view>
</view>